<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--开始:来源于FlycoTabLayout-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!--ActionBar的字体颜色. -->
        <item name="android:textColorPrimary">@color/white</item>
        <!--<item name="android:textColorPrimary">@color/multiple_image_select_toolbarPrimaryText</item>-->
    </style>

    <!-- 自定义dialog1 风格 -->
    <style name="NoBgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_margin">9px</item>
    </style>


    <style name="portraitDialogTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#007AFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--NewsFragment和 SearchActiviy中的分割线-->
    <style name="custom_horizontal_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>


</resources>
